 <!-- to display product value in modaL POPUP -->
<script>
    function showProductDetails(productId) {
        // Make an AJAX request to fetch product details
        fetch(`/user/productInfo/${productId}`)
            .then(response => response.json())
            .then(data => {
                const product = data.productInfo;
                // Populate modal with product details
                document.getElementById('product-name').innerText = product.productName;
                document.getElementById('product-description').innerText = product.productDescription;
                document.getElementById('product-price').innerText  = '$' + product.productPrice;
                 // Check if there are any images
                if (product.images && product.images.length > 0) {
                document.getElementById('product-image').src = product.images[0].imageUrl;
                }

                // Show the modal
                $('#product_view').modal('show');
            })
            .catch(error => console.error('Error fetching product details:', error));
    }
</script>